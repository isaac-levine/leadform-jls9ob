{
  "restartable": "rs",
  "verbose": true,
  "delay": 1000,
  "watch": [
    "src/**/*.ts"
  ],
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/tests/**",
    "node_modules/**"
  ],
  "execMap": {
    "ts": "ts-node"
  },
  "ext": "ts,json",
  "exec": "ts-node ./src/server.ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "./tsconfig.json"
  }
}